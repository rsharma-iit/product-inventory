doctype html
html
  head
    style.
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }
      li {
        display: inline-block;
        position: relative;
        padding: 10px;
        background-color: #eee;
        margin: 5px;
        cursor: pointer;
      }
      li ul {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 0;
        margin: 0;
      }
      li:hover ul {
        display: block;
      }
      li ul li {
        display: block;
        padding: 10px;
        margin: 0;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
      }
      li ul li:hover {
        background-color: #ddd;
      }
